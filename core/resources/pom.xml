<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.alice</groupId>
		<artifactId>parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../../</relativePath>
	</parent>

	<artifactId>resources</artifactId>
	<!-- Note: The packaging should really be pom; jar is wrong. -->
	<!-- m2eclipse won't build the platform directory needed without this hack. -->
	<packaging>jar</packaging>

	<name>Resources</name>

	<!-- TODO: gallery and sound-gallery need to become their own artifacts 
		which we extract during resource-generation. -->

	<properties>
		<project.resources.directory>${project.build.directory}/distribution</project.resources.directory>
		<project.resources.application.directory>${project.resources.directory}/application</project.resources.application.directory>
		<project.resources.gallery.directory>${project.resources.application.directory}/gallery</project.resources.gallery.directory>
		<project.resources.sound-gallery.directory>${project.resources.application.directory}/sound-gallery</project.resources.sound-gallery.directory>
		<project.resources.platform.directory>${project.resources.directory}/platform</project.resources.platform.directory>

		<platform.win32.label>win32</platform.win32.label>
		<platform.win64.label>win64</platform.win64.label>
		<platform.macosx.label>macosx</platform.macosx.label>
		<platform.linux-i586.label>linux-i586</platform.linux-i586.label>
		<platform.linux-amd64.label>linux-amd64</platform.linux-amd64.label>

		<platform.ffmpeg.label>ffmpeg</platform.ffmpeg.label>
		<platform.libvlc.label>libvlc</platform.libvlc.label>
		<platform.nebulous.label>nebulous</platform.nebulous.label>
		<platform.jogl.label>jogl</platform.jogl.label>
	</properties>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>distribution-application</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.resources.application.directory}</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/src/application/resources</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.8</version>
				<executions>
					<execution>
						<id>distribution-gallery</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.alice</groupId>
									<artifactId>alice-model-resources</artifactId>
									<version>${alice.gallery.version}</version>
									<type>zip</type>
									<outputDirectory>${project.resources.gallery.directory}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.alice.nonfree</groupId>
									<artifactId>nebulous-model-resources</artifactId>
									<version>${alice.gallery.version}</version>
									<type>zip</type>
									<outputDirectory>${project.resources.gallery.directory}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.alice</groupId>
									<artifactId>sound-gallery</artifactId>
									<version>${alice.gallery.version}</version>
									<type>zip</type>
									<outputDirectory>${project.resources.sound-gallery.directory}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>distribution-platform</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<!-- linux-amd64 -->
								<artifactItem>
									<groupId>org.jogamp.jogl</groupId>
									<artifactId>jogl-all</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-linux-amd64</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.linux-amd64.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.jogamp.gluegen</groupId>
									<artifactId>gluegen-rt</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-linux-amd64</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.linux-amd64.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.alice.nonfree</groupId>
									<artifactId>nebulous</artifactId>
									<version>${nebulous.version}</version>
									<classifier>linux-amd64</classifier>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.linux-amd64.label}/${platform.nebulous.label}</outputDirectory>
								</artifactItem>

								<!-- linux-i586 -->
								<artifactItem>
									<groupId>org.jogamp.jogl</groupId>
									<artifactId>jogl-all</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-linux-i586</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.linux-i586.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.jogamp.gluegen</groupId>
									<artifactId>gluegen-rt</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-linux-i586</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.linux-i586.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.alice.nonfree</groupId>
									<artifactId>nebulous</artifactId>
									<version>${nebulous.version}</version>
									<classifier>linux-i586</classifier>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.linux-i586.label}/${platform.nebulous.label}</outputDirectory>
								</artifactItem>

								<!-- macosx -->
								<artifactItem>
									<groupId>org.jogamp.jogl</groupId>
									<artifactId>jogl-all</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-macosx-universal</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.macosx.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.jogamp.gluegen</groupId>
									<artifactId>gluegen-rt</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-macosx-universal</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.macosx.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.alice.nonfree</groupId>
									<artifactId>nebulous</artifactId>
									<version>${nebulous.version}</version>
									<classifier>macosx</classifier>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.macosx.label}/${platform.nebulous.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.videolan</groupId>
									<artifactId>libvlc-macosx</artifactId>
									<version>2.0.7</version>
									<type>tar.gz</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.macosx.label}/${platform.libvlc.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.ffmpeg</groupId>
									<artifactId>ffmpeg-macosx</artifactId>
									<version>1.2.1</version>
									<type>tar.gz</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.macosx.label}/${platform.ffmpeg.label}</outputDirectory>
								</artifactItem>

								<!-- win32 -->
								<artifactItem>
									<groupId>org.jogamp.jogl</groupId>
									<artifactId>jogl-all</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-windows-i586</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.win32.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.jogamp.gluegen</groupId>
									<artifactId>gluegen-rt</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-windows-i586</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.win32.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.alice.nonfree</groupId>
									<artifactId>nebulous</artifactId>
									<version>${nebulous.version}</version>
									<classifier>win32</classifier>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.win32.label}/${platform.nebulous.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.videolan</groupId>
									<artifactId>libvlc-win32</artifactId>
									<version>2.0.8</version>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.win32.label}/${platform.libvlc.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.ffmpeg</groupId>
									<artifactId>ffmpeg-win32</artifactId>
									<version>1.2</version>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.win32.label}/${platform.ffmpeg.label}</outputDirectory>
								</artifactItem>

								<!-- win64 -->
								<artifactItem>
									<groupId>org.jogamp.jogl</groupId>
									<artifactId>jogl-all</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-windows-amd64</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.win64.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.jogamp.gluegen</groupId>
									<artifactId>gluegen-rt</artifactId>
									<version>${jogl.version}</version>
									<classifier>natives-windows-amd64</classifier>
									<outputDirectory>${project.resources.platform.directory}/${platform.win64.label}/${platform.jogl.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.alice.nonfree</groupId>
									<artifactId>nebulous</artifactId>
									<version>${nebulous.version}</version>
									<classifier>win64</classifier>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.win64.label}/${platform.nebulous.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.videolan</groupId>
									<artifactId>libvlc-win64</artifactId>
									<version>2.0.8</version>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.win64.label}/${platform.libvlc.label}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.ffmpeg</groupId>
									<artifactId>ffmpeg-win64</artifactId>
									<version>1.2</version>
									<type>zip</type>
									<outputDirectory>${project.resources.platform.directory}/${platform.win64.label}/${platform.ffmpeg.label}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<!-- Tell Eclipse to generate the resources in this pom -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-dependency-plugin</artifactId>
										<versionRange>[2.8,)</versionRange>
										<goals>
											<goal>unpack</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute>
											<runOnIncremental>true</runOnIncremental>
											<runOnConfiguration>false</runOnConfiguration>
										</execute>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-clean-plugin</artifactId>
										<versionRange>[2.0,)</versionRange>
										<goals>
											<goal>clean</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<profiles>
		<!-- Non-free sims libraries/models -->
		<profile>
			<id>non-free</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<!-- TODO: add the sims and nebulous stuff here. -->
			</dependencies>
		</profile>

	</profiles>

</project>

